{% extends "base.html.twig" %}
{% block body %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2 col-sm-offset-5">
                <form action="{{ path('login') }}" class="form-signin" method="post">
                    <h2 class="form-signin-heading text-center">Inicie sesión</h2>
                    <label class="sr-only" for="username">Username:</label>
                    <input class="form-control" type="text" id="username" placeholder="RUT" name="_username" value="{{ last_username }}" required/>
                    <label class="sr-only" for="password">Password:</label>
                    <input class="form-control" type="password" id="password" placeholder="Contraseña" name="_password" required/>
                    <button class="btn btn-block btn-primary" type="submit">Iniciar Sesión</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}