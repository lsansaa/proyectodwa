{% extends "base2.html.twig" %}
{% block body %}
    <div class="container-fluid">
        <div class="main-login main-center">
            <div class="panel-heading">
                <div class="panel-title text-center">
                    <h1 class="form-signin-heading text-center">Inicie sesión</h1>
                    {% if error %}
                        <h3><span class="label label-danger">{{ error.message | replace({"Bad credentials." : "Usuario o contraseña no válidos."}) }}</span></h3>
                    {% endif %}
                </div>
            </div>
            <div class =row>
                <div class="col-sm-4 col-sm-offset-4 text-center">
                    <span class="glyphicon glyphicon-user text-center" style="font-size: 150px;"></span>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-lg-2 col-lg-offset-5">
                    <form action="{{ path('login') }}" class="form-signin" method="post">

                        <label class="sr-only" for="username">Username:</label>
                        <input class="form-control" type="text" id="username" placeholder="RUT o Correo electrónico" name="_username" value="{{ last_username }}" required/>
                        <br>
                        <label class="sr-only" for="password">Password:</label>
                        <input class="form-control" type="password" id="password" placeholder="Contraseña" name="_password" required/>
                        <br>
                        <button class="btn btn-block btn-primary" type="submit">Iniciar Sesión</button>
                        <br>
                        <a href="{{ path('homepage') }}" class="btn btn-block btn-primary">Volver</a>
                    </form>
                </div>
            </div>

        </div>
    </div>
{% endblock %}